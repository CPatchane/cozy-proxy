shadow()
    -moz-box-shadow: arguments
    -webkit-box-shadow: arguments
    box-shadow: arguments

text-shadow()
    -moz-text-shadow: arguments
    -webkit-text-shadow: arguments
    text-shadow: arguments

@font-face
    font-family: main
    src: url('/signika-regular.ttf')

@font-face
    font-family: styled
    src: url('/maven-pro-light-200.otf')


blue = #15a7c7
darkblue = #363a46 
darkred = #C66666 
darkgreen = #66C666 
orange = #C60
orangewhite = #fcf9f5

html, body
    height: 100%
    width: 100%
    padding: 0
    margin: 0
    box-sizing: border-box

html, body, h1, p, input, div
    box-sizing: border-box

body
    background: orangewhite 

a, a:hover
    color: blue
    cursor: pointer

a:hover
    color: orange + 20%

h1
    font-size: 2.2em
    line-height: 1.3em
    font-family: styled
    font-weight: normal
    color: darkblue
    margin: 0

button
    font-size: 1.1em
    border-radius: 0.4em
    padding: 0.6em 0.8em

input
    font-family: styled
    font-size: 2.2em
    height: 1.3em
    width: 550px
    padding: 10px
    border-radius: 0.4em
    border: 0
    color: blue
    box-shadow: 0 0 0 0
    border: 1px solid white

input:focus
    color: orange + 20%
    box-shadow: 0 0 0 0
    border: 1px solid orange + 50%

p
    font-family: main

.alert
    width: 22em
    border: 0
    display: none

.alert-error
    font-family: styled
    font-size: 2em
    background: darkred
    padding: 20px
    width: 530px
    color: white

.alert-success
    font-family: styled
    font-size: 2em
    background: darkgreen 
    padding: 20px
    width: 530px
    color: white

.additional-line
    margin-top: 1em

.loading
    width: 30px
    margin-bottom: 0px

.alert-error
.alert-success
    display: none

#header
    width: 100%
    clear: both

#header:after
    content: ""
    display: table
    clear: both

#submit-btn
    margin-left: 5px
    margin-bottom: 9px
    border-radius: 0.4em
    border: 0
    outline: 0
    padding: 10px
    color: white
    margin-left: 0px
    width: 570px
    cursor: pointer
    background: blue

#submit-btn:hover
    background: orange + 20%

#submit-btn:active
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.4) inset
    background: orange + 10%

#username
    color: darkblue

#content
    padding: 20px
    padding-left: 60px 

#email-input
    margin-bottom: 0px

#forgot-password
    display: none
    font-family: main

#logo
    float: right
    margin: 40px


@media(max-width: 640px)

    h1
        padding: 0 0

    .proxy-form
        padding-top: 1em
        padding-bottom: 1em
        

        p
            box-sizing: border-box

        .input-wrapper
            padding-right: 20px

        input
            width: 100%
            display: block
            box-sizing: border-box

        .loading
            display: none

    .alert-error
    .alert-success
        width: auto
        box-sizing: border-box
            
    #content
        padding: 40px
        box-sizing: border-box

        div
            box-sizing: border-box

    #logo
        margin: 20px

    #submit-btn
        display: block
        width: 100%

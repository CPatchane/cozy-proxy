shadow()
    -moz-box-shadow: arguments
    -webkit-box-shadow: arguments
    box-shadow: arguments

text-shadow()
    -moz-text-shadow: arguments
    -webkit-text-shadow: arguments
    text-shadow: arguments

@font-face
    font-family: main
    src: url('/signika-regular.ttf')

@font-face
    font-family: styled
    src: url('/maven-pro-light-200.otf')

darkblue = #363a46 
darkred = #A66a66 
orange = #C60
orangewhite = #fcf9f5

html, body
    height: 100%
    width: 100%
    padding: 0
    margin: 0
    box-sizing: border-box

html, body, h1, p, input, div
    box-sizing: border-box

body
    background: orangewhite 

a, a:hover
    color: orange
    cursor: pointer

h1
    font-size: 2.2em
    line-height: 1.3em
    font-family: styled
    font-weight: normal
    color: darkblue
    margin: 0

button
    font-size: 1.1em
    border-radius: 0.4em
    padding: 0.6em 0.8em

input
    font-family: styled
    font-size: 2.2em
    height: 1.3em
    width: 550px
    padding: 10px
    border-radius: 0.4em
    border: 0
    color: orange + 20%
    box-shadow: 0 0 0 0
    border: 1px solid white

input:focus
    box-shadow: 0 0 0 0
    border: 1px solid orange + 50%

.alert
    width: 22em
    border: 0
    display: none

.alert-error
    font-family: styled
    font-size: 2em
    background: transparent
    padding-left: 0
    color: darkred

.alert-success
    font-family: styled
    font-size: 2em
    background: transparent
    padding-left: 0

.additional-line
    margin-top: 1em

.loading
    width: 30px
    margin-bottom: 0px

.proxy-form
    padding-top: 20px

#header
    width: 100%
    clear: both

#header:after
    content: ""
    display: table
    clear: both

#submit-btn
    margin-left: 5px
    margin-bottom: 9px
    background: orange + 20%
    border-radius: 0.4em
    border: 0
    outline: 0
    padding: 10px
    color: white
    margin-left: 10px
    width: 550px
    cursor: pointer

#submit-btn:hover
    background: orange + 60%
    color: #555

#submit-btn:active
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.4) inset
    background: orange + 10%

#username
    color: darkblue

#content
    padding: 20px
    padding-left: 60px 

#email-input
    margin-bottom: 0px

#forgot-password
    display: none
    font-family: main

#logo
    float: right
    margin: 60px


@media(max-width: 640px)

    h1
        display: none
        padding: 0 0

    .proxy-form
        padding-top: 1em
        padding-bottom: 1em
        

        input
            width: 100%

        .loading
            display: none
            
    #content
        padding: 40px

    #logo
        margin: 20px

    #submit-btn
        display: inline
        width: 100%
        margin-left: 10px

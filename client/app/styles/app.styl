@import "nib"


shadow()
    -moz-box-shadow arguments
    -webkit-box-shadow arguments
    box-shadow arguments

text-shadow()
    -moz-text-shadow arguments
    -webkit-text-shadow arguments
    text-shadow arguments

*
    outline 0

    &:hover
        outline 0

blue = #15a7c7
darkgrey = #6A6666
darkred = #C66666
darkgreen = #66C666
orange = #C60
orangewhite = #fcf9f5
darkblue = #405077
darkblue = #338CF7 - 30%


html, body
    height 100%
    width 100%
    padding 0
    margin 0
    box-sizing border-box


html, body, h1, p, input, div
    box-sizing border-box

body
    text-align center
    background-color orangewhite - 5%
    padding-top 70px

body.intro
    background url('/images/background.jpg') no-repeat center center fixed; 
    background-size cover

a, a:hover
    color blue
    cursor pointer

a:hover
    color orange + 20%

h1
    font-size 1.5em
    line-height 1.3em
    font-family 'Source Sans Pro', sans-serif
    font-weight normal
    color darkgrey
    margin 0

button
    font-size 1.1em
    border-radius 0.4em
    padding 0.6em 0.8em

input
select
    font-family 'Source Sans Pro', sans-serif
    font-size 26px
    height 52px
    width 550px
    padding 4px 10px
    border-radius 0.4em
    color blue
    box-shadow 0 0 0 0
    border 1px solid transparent

input:focus
    color orange + 20%
    box-shadow 0 0 0 0
    border 1px solid orange + 50%
    outline none

p
    font-family 'Source Sans Pro', sans-serif

.hidden
    display none

#timezone-input
    background white


.alert
    width 22em
    border 0
    display none

.alert-error
.alert-success
    box-sizing border-box
    font-family 'Source Sans Pro', sans-serif
    font-size 1.3em
    width 100%
    color white
    display none
    border-radius 5px
    padding 5px 10px
    margin 5px 0 35px 0

.alert-error
    background darkred

.alert-success
    background darkgreen

.additional-line
    margin-top 1em

.loading
    width 30px
    margin-bottom 0px

#header
    width 100%
    clear both
    margin auto
    text-align center
    margin-bottom 40px
    background orangewhite
    width 160px
    border-radius 200px
    padding-top 8px

    img 
        width 140px

#header:after
    content ""
    display table
    clear both

#submit-btn
    margin-left 5px
    margin-bottom 9px
    border-radius 0.4em
    border 0
    outline 0
    padding 7px
    color white
    margin-left 0px
    width 100%
    cursor pointer
    background blue
    transition background 0.6 ease

    &.btn-success
        background darkgreen

.proxy-form
    background orangewhite
    margin auto
    max-width 550px
    padding 40px
    border-radius 20px

    input
    button
    #btn-wrapper
        width 100%

.proxy-form.register
    padding 20px

    input
    select
        border 1px solid blue
        width 460px

.input-wrapper
    margin 1em 0

    &.invalid
        input
            border 1px solid red

#btn-wrapper
    width 550px
    .btn-container
        display inline-block
        width 270px
        &.left
            text-align left
        &.right
            text-align right
        &.center
            text-align center

        #submit-btn
            width 250px
            font-family 'Source Sans Pro', sans-serif
        &.single
            width 100%
            #submit-btn
                width 100%
    #btn-separator
        display inline-block
        width 10px

#expand-btn
    font-family 'Source Sans Pro', sans-serif
    font-size 14px
    display inline-block
    margin-left 5px
    margin-bottom 9px
    color blue
    &:hover
        color orange + 20%

#reinsurance
    text-align left
    font-family 'Source Sans Pro', sans-serif
    font-size 16px

.help
    display inline-block
    vertical-align middle
    position relative
    i.icon
        display inline-block
        height 48px
        width 48px
        opacity 0.2
        background url('/images/help.png') no-repeat center center
    .help-info
        display none
        position absolute
        top 0
        left 100%
        width 300px
        background #fff
        padding 5px
        border 3px solid orangewhite - 20%
        border-radius 5px
        font-family 'Source Sans Pro', sans-serif

        .valid
        .invalid
            margin-top 5px
        .valid
            color green
            display none
        .invalid
            color red

    &.selected
    &:hover
        i.icon
            opacity 0.6
        .help-info
            display block

#submit-btn:hover
    background orange + 20%

#submit-btn:active
    box-shadow 1px 3px 2px rgba(0, 0, 0, 0.4) inset
    background orange + 10%

#submit-btn:disabled
    opacity 0.5

#password-input
    padding-left 10px

#password-input:hover
    border 1px solid blue

    &:active
    &:focus
        border 1px solid orange + 20%

#email-input
    margin-bottom 0px

#forgot-password
    display none 0
    font-family 'Source Sans Pro', sans-serif

#logo
    text-decoration none
    font-family 'Source Sans Pro', sans-serif
    font-size 1.4em
    color blue
    margin-bottom 60px

    span
        display none
        position absolute
        top 0em
        right 1em
        color darkgrey

.proxy-form.error
    text-align left
    font-size 22px
    width 100%
    max-width 720px
    font-family 'Source Sans Pro', sans-serif
    color darkgrey

    h1
        color darkgrey

    a
        color blue

        &:hover
            color orange

@media(max-width: 840px)

    h1
        padding 10px 0
        font-size 21px
        line-height 22px

    .proxy-form
        padding 20px


        p
            box-sizing border-box

        .input-wrapper
            padding 0

            input
            select
                width 100%

            .help
                position static
                box-sizing border-box
                i.icon
                    display none
                .help-info
                    position static
                    box-sizing border-box
                    top 5px
                    width 100%
                    font-size 14px

        input
        select
            width 100%
            display block
            box-sizing border-box
            font-size 22px

        #reinsurance
        #btn-wrapper
            width 100%

        .loading
            display none

        #btn-wrapper #btn-separator, #btn-wrapper .btn-container
            width 100%
            text-align center
            button
                width 100%

    .alert-error
    .alert-success
        width 100%
        box-sizing border-box

    .alert-success
        font-size 20px

    #content
        padding 10px
        box-sizing border-box

        div
            box-sizing border-box

    #header
        width 90px
        height 90px
        padding 5px

    #logo
        margin 0
        float left

        img
            width 80px
            height 80px

@media(max-width: 500px)

    body
        padding-top 10px

    #header
        margin-bottom 10px

    .proxy-form
        padding 10px

        h1
            font-size 18px
            padding 0

    #header
        width 60px
        height 60px
        padding 5px
        margin 0 auto 10px auto

    #logo
        margin 0
        float left

        img
            width 50px
            height 50px


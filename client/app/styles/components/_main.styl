*
    box-sizing border-box

[aria-disabled="true"]
    opacity 0.4
    cursor not-allowed

// remove transition to text intend when the spinner is coming
[aria-busy="true"]
[aria-busy="false"]
    transition text-indent 0s 0s

[aria-busy="true"]
    display         flex
    align-items     center
    justify-content center
    text-indent     -100em

    &:after
        content           ''
        display           block
        width             1.4em
        height            1.4em
        background-image  url('/img/spinner-white.svg')
        background-repeat no-repeat
        background-size   cover

body
    @extend $body-background
    @extend $font

main
    @extend $center-div
    @extend $full-height-vp

h1
    margin      0.5em 0 0.3em
    font-size   1.8em
    font-weight normal
    text-align  center

h2
    margin  0
    @extend $headings-02

a
    color           $blue
    text-decoration none

.tips
    margin-top 0.2em
    @extend $low-spot

.content-block
    margin-bottom 2em

.google-services-list label
    display     flex
    align-items center
    margin 0.5em 2em

.feedback ul
    display         flex
    justify-content center
    margin          1em 0
    padding         0
    list-style      none

    li
        width            12px
        height           12px
        margin           0 0.1em
        background-color $grey-02
        @extend          $border-radius-round
        text-indent      -100em

        &[aria-selected=true]
            background-color $grey-04

        &[aria-selected=true] ~ [aria-selected=false]
            background-color transparent
            border 1px solid $grey-04

// login Section
.login
    .help
        margin-top 0
        color      $grey-05
        font-size  1.1em
        text-align center

    .recover
        margin-top 1em
